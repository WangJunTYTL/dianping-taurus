<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Taurus Web</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
        	classpath*:applicationContext*.xml
		</param-value>
    </context-param>

	<!-- 日志记录 -->
    <context-param>
        <!-- 日志配置文件路径 -->
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.properties</param-value>
    </context-param>
    <context-param>
        <!-- 日志页面的刷新间隔 -->
        <param-name>log4jRefreshInterval</param-name>
        <param-value>6000</param-value>
    </context-param>
	<listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	<context-param>
		<param-name>RESTLET_SERVER</param-name>
		<param-value>http://localhost:8192/api/</param-value>
	</context-param>
    <context-param>
        <param-name>AGENT_SERVER_PORT</param-name>   <!-- agent 的服务端口号-->
        <param-value>8278</param-value>
    </context-param>

    <context-param>
		<param-name>XSL_UPLOAD_TMP_DIR</param-name>
		<param-value>/tmp/</param-value>
	</context-param>
	<context-param>
		<param-name>ERROR_PAGE</param-name>
		<param-value>/error</param-value>
	</context-param>
	
	<!-- cat集成 -->
    <filter>
        <filter-name>cat-filter</filter-name>
        <filter-class>com.dianping.cat.servlet.CatFilter</filter-class>
    </filter>
	<filter-mapping>
        <filter-name>cat-filter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
	
	<!-- 本机身份验证 -->
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.dp.bigdata.taurus.web.servlet.filter.AuthenticationFilter</filter-class>
		<init-param>
			<param-name>excludePage</param-name>
			<param-value>/login.do,/signin,/rest/ssologin,/rest/ssologout,/error,/static/,/js/,/css/,/files/,/img/,/lib/,/resource/</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<session-config>
		<!-- 12 hours -->
		<session-timeout>720</session-timeout>
	</session-config>


	<!-- spirng mvc 配置 -->
	<servlet>
		<servlet-name>springmvc-servlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springmvc-servlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>SPRINGMVC_SERVLET_URL_PATTERN</param-name>
		<param-value>/*</param-value>
	</context-param>

</web-app>

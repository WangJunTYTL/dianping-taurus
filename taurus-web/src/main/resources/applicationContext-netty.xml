<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						     http://www.springframework.org/schema/context
						     http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder ignore-unresolvable="true"
                                  location="classpath*:/netty.properties"/>
    <bean id="netty"
          class="com.dp.bigdata.taurus.common.netty.NettyExecutorManager" />
    <bean id="proxy"
          class="com.dp.bigdata.taurus.common.ExecutorManagerFactory" />
    <bean id="nettyRemotingClient"
          class="com.dp.bigdata.taurus.common.netty.NettyRemotingClient" init-method="start" destroy-method="shutdown"/>
    <bean id="nettyRemotingServer"
          class="com.dp.bigdata.taurus.common.netty.NettyRemotingServer" init-method="start" destroy-method="shutdown"/>
</beans>


